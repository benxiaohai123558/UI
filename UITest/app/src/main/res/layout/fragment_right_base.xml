        android:layout_marginTop="@dimen/px26"
        android:background="@drawable/white_background" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/px26"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            style="@style/black_large"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px42"
            android:gravity="center"
            android:text="title" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px2"
            android:layout_marginLeft="@dimen/px34"
            android:layout_marginRight="@dimen/px34"
            android:background="@color/solid_separate" />

        <!--<ScrollView-->
        <!--android:id="@+id/container"-->
