        <!--android:layout_marginLeft="@dimen/px34"-->
        <!--android:layout_marginRight="@dimen/px34"-->
        <!--android:scrollbars="none"></ScrollView>-->

        <ViewStub
            android:id="@+id/viewstub"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hpx540"
            android:layout_marginLeft="@dimen/px34"
            android:layout_marginRight="@dimen/px34"></ViewStub>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px2"
            android:layout_marginLeft="@dimen/px34"
            android:layout_marginRight="@dimen/px34"
            android:background="@color/solid_separate" />
    </LinearLayout>

</FrameLayout>