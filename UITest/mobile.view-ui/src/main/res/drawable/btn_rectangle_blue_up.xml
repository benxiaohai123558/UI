<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >  
    
    <item  >  
        <shape android:shape="rectangle" >  
            <solid android:color="@android:color/transparent" />  
        </shape>  
    </item>  
    
    <item  
         android:bottom="@dimen/px3"
         android:top="@dimen/px4">  
        <shape android:shape="rectangle" >  
            <solid android:color="@color/black_2alpha" />
            <corners android:radius="@dimen/px4"/><!-- 设置圆角半径 -->  
        </shape>  
    </item>  
    
    <item
        android:bottom="@dimen/px4"
        android:top="@dimen/px4" >  
        <shape android:shape="rectangle" >  
            <gradient  
                android:angle="270"  
                android:startColor="@color/btn_blue_start_9alpha"  
                android:endColor="@color/btn_blue_end_9alpha"/>  
                
            <corners
        		android:radius="@dimen/px4"/><!-- 设置圆角半径 -->
        		
        		<stroke
			        android:width="@dimen/px1"
			        android:color="@color/btn_blue_stroke"/>
        </shape>  
    </item>  
</layer-list>  
