                android:layout_width="@dimen/px60"
                android:layout_height="@dimen/px60"
                android:layout_marginLeft="@dimen/px4"
                android:background="@drawable/custom_keyboard_btn"
                android:tag="4"
                android:text="@string/four"/>

            <FrameLayout
                android:layout_width="@dimen/px60"
                android:layout_height="@dimen/px60"
                android:layout_marginLeft="@dimen/medium">

                <Button
                    android:id="@+id/btn_backspace"
                    style="@style/white_large"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px60"
                    android:background="@drawable/custom_keyboard_btn"
                    android:tag="backspace"/>

                <View
                    android:id="@+id/img_backspace"
                    android:layout_width="@dimen/px32"
                    android:layout_height="@dimen/px32"
                    android:layout_marginLeft="@dimen/medium"
                    android:layout_marginTop="@dimen/small"
                    android:background="@drawable/icon_kb_del_w"/>
            </FrameLayout>
        </LinearLayout>
        <!-- 第二排 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px60"
            android:layout_marginTop="@dimen/px6">

            <Button
                android:id="@+id/btn_5"
                style="@style/white_large"
                android:layout_width="@dimen/px60"
                android:layout_height="@dimen/px60"
                android:background="@drawable/custom_keyboard_btn"
                android:tag="5"
                android:text="@string/five"/>

