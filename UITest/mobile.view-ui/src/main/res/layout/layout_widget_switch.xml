<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px6"
        android:paddingRight="@dimen/px6">

        <TextView
            android:id="@+id/txt_title"
            style="@style/black_medium"
            android:layout_width="0dip"
            android:layout_height="@dimen/px44"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"/>

        <Button
            android:id="@+id/btn_toggle"
            android:layout_width="@dimen/px77"
            android:layout_height="@dimen/px44"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/btn_switch_on"
            android:textOff="@null"
            android:textOn="@null"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/px8"
        android:paddingLeft="@dimen/px6"
        android:paddingRight="@dimen/px1"
        android:textColor="@color/medium_gray"
        android:textSize="@dimen/small"
        android:visibility="gone"/>

    <View
        style="@style/bg_line"
        android:layout_width="match_parent"/>

</LinearLayout>