<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_title"
            style="@style/black_medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px6"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="" />

        <TextView
            android:id="@+id/txt_context"
            style="@style/blue_medium"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px2"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:maxLines="2"
            android:text=""
            android:textColorHint="@color/medium_gray" />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="@dimen/px44"
            android:layout_height="@dimen/px44"

            android:src="@drawable/linkicon_del"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_arrow"
            style="@style/black_medium"
            android:layout_width="@dimen/px16"
            android:layout_height="@dimen/px16"
            android:layout_marginRight="@dimen/px6"
            android:src="@drawable/icon_arrow_left"
            android:text=""
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        style="@style/bg_line"
        android:layout_width="match_parent"
        android:layout_gravity="bottom" />

</FrameLayout>