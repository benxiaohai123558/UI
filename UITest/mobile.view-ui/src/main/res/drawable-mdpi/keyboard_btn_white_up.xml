            <solid android:color="@color/black_2alpha" />
            <corners android:radius="@dimen/px4"/><!-- 设置圆角半径 -->  
        </shape>  
    </item>  
    
    <item
        android:bottom="@dimen/px1">  
        <shape android:shape="rectangle" >  
            <gradient  
                android:angle="270"  
                android:startColor="@color/btn_white_start_9alpha"  
                android:endColor="@color/btn_white_end_9alpha"/>  
                
            <corners
        		android:radius="@dimen/px4"/><!-- 设置圆角半径 -->
        		
        		<stroke
			        android:width="@dimen/px1"
			        android:color="@color/btn_white_stroke"/>
